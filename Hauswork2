
public class Houswork2 {
    public static void main(String[] args) {
        int hOuS = 100;
        System.out.print("The next number for the number " + hOuS);
        hOuS+= 1;
        System.out.println(" is " + hOuS +". ");
        hOuS-=1;
        System.out.print("The next number for the number " + hOuS);
        hOuS-=1;
        System.out.print(" is " +hOuS +". ");


    }

}
